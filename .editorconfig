# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Go files - use tabs (Go convention)
[*.go]
indent_style = tab
indent_size = 4

# Go module files
[go.{mod,sum}]
indent_style = tab
indent_size = 4

# Markdown files - preserve trailing whitespace (for line breaks)
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Makefiles - require tabs
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Windows scripts
[*.{bat,cmd,ps1}]
end_of_line = crlf
indent_style = space
indent_size = 2
